#!/bin/sh

# Prints the current volume or  if muted.

case $BLOCK_BUTTON in
	1) setsid -f "$TERMINAL" -e pulsemixer ;;
	2) notify-send "ğŸ”† Backlight module" "\- Shows volume ğŸ”Š, ğŸ”‡ if muted.
- Right click to mute.
- Scroll to change." ;;
	#3) pamixer -t ;;
	4) brightnessctl s +80;;
	5) brightnessctl s 80-;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac


per="$(($(brightnessctl g) *100/$(brightnessctl m)))"

if [ "$per" -gt "78" ]; then
	icon="ï—Ÿ"
elif [ "$per" -gt "63" ]; then
	icon="ï—œ"
elif [ "$per" -gt "38" ]; then
	icon="ï—"
elif [ "$per" -gt "13" ]; then
	icon="ï—"
else
	icon="ï—"
fi

echo " $icon $per% "
